<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="LionPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.Entidades.Circon</class>
    <class>com.Entidades.Grupo</class>
    <class>com.Entidades.Miembro</class>
    <class>com.Entidades.Modelo</class>
    <class>com.Entidades.ModeloCircon</class>
    <class>com.Entidades.ModeloPiedraCentral</class>
    <class>com.Entidades.Modulo</class>
    <class>com.Entidades.Orden</class>
    <class>com.Entidades.OrdenModelo</class>
    <class>com.Entidades.Permisos</class>
    <class>com.Entidades.PiedraCentral</class>
    <class>com.Entidades.Rol</class>
    <class>com.Entidades.RolModuloPermiso</class>
    <class>com.Entidades.SubGrupo</class>
    <class>com.Entidades.Tipo</class>
    <class>com.Entidades.Usuario</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/LionJoyas?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
